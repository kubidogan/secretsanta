    <p><%= render "errors/errors" %></p>

    <div class="text-area">
      <p><%= form_for @group, url: groups_path, method: :post do |f| %></p>
      <div>
        <p><%= f.label "Name your group:", :class => "create_group_label" %></p>
        <p><%= f.text_field :name %></p>
      </div>
      <div>
        <p><%= f.label "Set max individual budget Â£:", :class => "create_group_label" %></p>
        <p><%= f.text_field :budget %></p>
