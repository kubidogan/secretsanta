      <p><%= f.submit "Create group", :class => "create_group_button" %></p>
      <% end %>
    </div>

    <div >
      <%= button_to "Back to homepage", groups_path, method: :get, :class => "home_page_button" %>
    </div>


    <p>Note: You will automatically be assigned to this group </p>

  </div>
