      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :event_date, style: "display: block" %>
      <%= form.datetime_field :event_date %>
    </div>

    <div>
      <%= form.label :location, style: "display: block" %>
      <%= form.text_field :location %>
    </div>

    <div>
      <%= form.label :people, style: "display: block" %>
      <%= form.text_field :people %>
    </div>

    <div class="d-none">
      <%= form.label :user_id, style: "display: block"%>
      <%= form.number_field :user_id, id: :parties_user_id, value: current_user.id %>
